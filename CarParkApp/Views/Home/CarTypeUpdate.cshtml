@model Data.DataModel.CreateCarTypeDataModel


@section Css{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}
@section Scripts{
    <script>
        $(document).ready(function () {

            $("#btn-update-carType").on("click", function () {
                debugger;
                var formData = new FormData();
                formData.append("id", $("#hdn-carType-id").val());
                formData.append("carTypeName", $("#carTypeName").val());
                var url = '@Url.Action("CarTypeUpdate","Home")';
                $.ajax({
                    type: 'POST',
                    url: url,
                    contentType: false,
                    processData: false,
                    cache: false,
                    data: formData,
                });
            });
        });
    </script>
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Car Type</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <h1 class="h3">Update Car Type</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form>
                <input type="hidden" id="hdn-carType-id" @*name="id"*@ value="@Model.Id" />
                <div class="form-group row mt-2">
                    <label for="carTypeName" class="col-sm-3 col-form-label">Car Type Name</label>
                    <div class="col-sm-9">
                        <input type="text" id="carTypeName" class="form-control" value="@Model.CarTypeName">
                    </div>
                </div>
                

                <div class="form-group row mt-2">
                    <div class="col-sm-10">
                        <a href="javascript:void(0)" class="btn btn-primary" id="btn-update-carType">Save Car Type Name</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
